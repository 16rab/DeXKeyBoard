<resources>
    <!-- Dark Mode Color Palette -->
    
    <!-- Backgrounds -->
    <color name="bg_app">#121212</color>        <!-- Dark Gray (Material Dark Background) -->
    <color name="bg_surface">#1E1E1E</color>    <!-- Slightly lighter gray for cards/surfaces -->
    <color name="bg_subtle">#2C2C2C</color>     <!-- Lighter gray for inputs/secondary areas -->
    
    <!-- Text -->
    <color name="text_primary">#F9FAFB</color>  <!-- Near White (Gray 50) -->
    <color name="text_secondary">#D1D5DB</color><!-- Light Gray (Gray 300) -->
    <color name="text_tertiary">#9CA3AF</color> <!-- Medium Gray (Gray 400) -->
    <color name="text_on_brand">#FFFFFF</color>
    
