<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Minimalist Color Palette -->
    
    <!-- Backgrounds -->
    <color name="bg_app">#FAFAFA</color>        <!-- Ultra Light Gray for page background -->
    <color name="bg_surface">#FFFFFF</color>    <!-- Pure White for cards/containers -->
    <color name="bg_subtle">#F5F5F7</color>     <!-- Subtle Gray for inputs/secondary areas -->
    
    <!-- Text -->
    <color name="text_primary">#111827</color>  <!-- Near Black (Gray 900) -->
    <color name="text_secondary">#6B7280</color><!-- Medium Gray (Gray 500) -->
    <color name="text_tertiary">#9CA3AF</color> <!-- Light Gray (Gray 400) -->
    <color name="text_on_brand">#FFFFFF</color>
    
    <!-- Brand / Accent -->
    <color name="brand_primary">#2563EB</color> <!-- Royal Blue (unchanged, but used sparingly) -->
    <color name="brand_ripple">#1A2563EB</color><!-- Ripple effect -->
    
    <!-- Functional Status -->
    <color name="status_success">#10B981</color> <!-- Emerald -->
    <color name="status_error">#EF4444</color>   <!-- Red -->
    <color name="status_warning">#F59E0B</color> <!-- Amber -->
    
    <!-- Borders / Dividers -->
    <color name="stroke_default">#E5E7EB</color> <!-- Gray 200 -->
    <color name="divider">#F3F4F6</color>
    
    <!-- Legacy Mappings (to prevent crashes if referenced) -->
    <color name="purple_200">@color/brand_primary</color>
    <color name="purple_500">@color/brand_primary</color>
    <color name="purple_700">@color/brand_primary</color>
    <color name="teal_200">@color/status_success</color>
    <color name="teal_700">@color/status_success</color>
    <color name="black">@color/text_primary</color>
    <color name="white">@color/bg_surface</color>
</resources>